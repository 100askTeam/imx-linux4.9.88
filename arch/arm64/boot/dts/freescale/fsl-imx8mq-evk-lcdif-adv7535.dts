#include "fsl-imx8mq-evk.dts"

/ {
	display-subsystem {
		status = "disabled";
	};
};

&irqsteer_dcss {
	status = "disabled";
};

&ov5640_mipi {
	status = "disabled";
};

&dcss_drm {
	status = "disabled";
};

&hdmi_drm {
	status = "disabled";
};

&hdmi_cec {
	status = "disabled";
};

&lcdif_drm {
	status = "okay";

	port@0 {
		lcdif_mipi_dsi: mipi-dsi-endpoint {
			remote-endpoint = <&mipi_dsi_in>;
		};
	};
};

&i2c1 {
	adv_bridge: adv7535@3d {
		compatible = "adi,adv7533";
		reg = <0x3d>;
		adi,dsi-lanes = <4>;
		status = "okay";

		port {
			adv7535_in: endpoint {
				remote-endpoint = <&mipi_dsi_bridge_adv>;
			};
		};
	};
};

&mipi_dsi_phy_drm {
	status = "okay";
};

&mipi_dsi_drm {
	status = "okay";
	as_bridge;

	port@1 {
		mipi_dsi_in: endpoint {
			remote-endpoint = <&lcdif_mipi_dsi>;
		};
	};
};

&mipi_dsi_bridge_drm {
	status = "okay";

	port@1 {
		mipi_dsi_bridge_adv: endpoint {
			remote-endpoint = <&adv7535_in>;
		};
	};
};

